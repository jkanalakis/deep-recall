[flake8]
max-line-length = 100
exclude = .git,__pycache__,build,dist
ignore = E501,W291,W503,W504,E203

per-file-ignores =
    __init__.py: F401
    tests/*: F401, F841
    examples/*: F401, F541
    scripts/*: F401, E402
    api/endpoints/*: F401
    api/auth/*: F401
    api/middleware/*: F401
    common/logging/*: F401
    inference_service/*: F401, F541, F841
    memory/*: F401
    models/*: F401, F541
    orchestrator/*: F401 